@page "/AdminPage/UserManagement"
@model HomeBuddy.FE.Pages.AdminPage.UserManagementModel
@{
    ViewData["Title"] = "User Management";
}

<!-- Sidebar CSS -->
<style>
    #sidebar {
        position: fixed;
        z-index: 20;
        height: 100%;
        top: 0;
        left: 0;
        width: 250px;
        background-color: #f8f9fa;
        border-right: 1px solid #e0e0e0;
        padding-top: 70px;
        display: flex;
        flex-direction: column;
    }

        #sidebar ul {
            list-style: none;
            padding: 0;
        }

            #sidebar ul li {
                padding: 10px 20px;
            }

                #sidebar ul li a {
                    color: #333;
                    text-decoration: none;
                    display: flex;
                    align-items: center;
                    font-weight: 500;
                }

                    #sidebar ul li a:hover {
                        background-color: #e9ecef;
                        border-radius: 5px;
                    }

                    #sidebar ul li a svg {
                        margin-right: 10px;
                    }

    #main-content {
        margin-left: 250px;
        padding: 20px;
        background-color: #f1f3f5;
        min-height: 100vh;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
    }

    th, td {
        padding: 12px;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f1f3f5;
        color: #495057;
    }

    td .status-badge {
        padding: 5px 10px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: bold;
    }

    .status-male {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .status-female {
        background-color: #f8d7da;
        color: #842029;
    }

    .edit-button {
        color: #ffc107;
        cursor: pointer;
        text-decoration: underline;
    }
</style>

<!-- Sidebar HTML -->
<aside id="sidebar" aria-label="Sidebar">
    <div>
        <ul>
            <li>
                <a href="/AdminPage" class="text-sm text-gray-900 font-normal rounded-lg flex items-center p-2 hover:bg-gray-100 group">
                    <svg class="w-5 h-5 text-gray-500 group-hover:text-gray-900 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
                        <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path>
                    </svg>
                    <span class="ml-2">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/AdminPage/UserManagement" class="text-sm text-gray-900 font-normal rounded-lg flex items-center p-2 hover:bg-gray-100 group">
                    <svg class="w-5 h-5 text-gray-500 group-hover:text-gray-900 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-2">User Management</span>
                </a>
            </li>
        </ul>
        <div class="mt-4 px-4">
            @if (HttpContext.Session.GetString("JWTToken") != null)
            {
                <span>Hello, @HttpContext.Session.GetString("UserName")!</span>
                <form method="post" asp-page="/LogIn&Out/Logout">
                    <button type="submit" class="mt-2">Log out</button>
                </form>
            }
            else
            {
                <a href="/Signup">Sign Up</a>
            }
        </div>
    </div>
</aside>

<!-- Main Content -->
<div id="main-content">
    <main>
        <h3 class="header-title">User Management</h3>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Gender</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Users != null && Model.Users.Count > 0)
                {
                    foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.Phone</td>
                            <td>
                                <span class="status-badge @(user.Gender ? "status-male" : "status-female")">
                                    @(user.Gender ? "Male" : "Female")
                                </span>
                            </td>
                            <td>
                                <form asp-page-handler="ChangeRole" method="post">
                                    <input type="hidden" name="UserId" value="@user.Id" />
                                <select asp-for="newRole">
                                    <option value="User" selected="@(user.Role == "User")">User</option>
                                    <option value="Manager" selected="@(user.Role == "Manager")">Manager</option>
                                    <option value="Helper" selected="@(user.Role == "Helper")">Helper</option>
                                </select>
                                    <button type="submit" class="edit-button">Change role</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="6">No users found.</td></tr>
                }
            </tbody>
        </table>
    </main>
</div>
<style>
    /* Existing styles */
    #main-content {
        margin-left: 250px;
        padding: 20px;
        background-color: #f1f3f5;
        min-height: 100vh;
    }

    /* New styles for the h3 title */
    .header-title {
        text-align: center; /* Căn giữa */
        font-size: 2rem; /* Kích thước lớn hơn */
        font-weight: bold; /* In đậm */
        margin-bottom: 20px; /* Khoảng cách dưới tiêu đề */
    }
</style>

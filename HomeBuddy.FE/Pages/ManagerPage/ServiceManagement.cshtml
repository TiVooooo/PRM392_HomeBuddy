@page
@model HomeBuddy.FE.Pages.ManagerPage.ServiceManagementModel
@{
    ViewData["Title"] = "HelperManagement";
}
<!-- Sidebar CSS -->
<style>
    #sidebar {
        position: fixed;
        z-index: 20;
        height: 100%;
        top: 0;
        left: 0;
        width: 250px;
        background-color: #f8f9fa;
        border-right: 1px solid #e0e0e0;
        padding-top: 70px;
        display: flex;
        flex-direction: column;
    }

        #sidebar ul {
            list-style: none;
            padding: 0;
        }

            #sidebar ul li {
                padding: 10px 20px;
            }

                #sidebar ul li a {
                    color: #333;
                    text-decoration: none;
                    display: flex;
                    align-items: center;
                    font-weight: 500;
                }

                    #sidebar ul li a:hover {
                        background-color: #e9ecef;
                        border-radius: 5px;
                    }

                    #sidebar ul li a svg {
                        margin-right: 10px;
                    }

    #main-content {
        margin-left: 250px;
        padding: 20px;
        background-color: #f1f3f5;
        min-height: 100vh;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
    }

    th, td {
        padding: 12px;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f1f3f5;
        color: #495057;
    }

    td .status-badge {
        padding: 5px 10px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: bold;
    }

    .status-male {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .status-female {
        background-color: #f8d7da;
        color: #842029;
    }

    .edit-button {
        color: #ffc107;
        cursor: pointer;
        text-decoration: underline;
    }
</style>

<!-- Sidebar HTML -->
<aside id="sidebar" aria-label="Sidebar">
    <div>
        <ul>
            <li>
                <a href="/ManagerPage/HelperManagement" class="text-sm text-gray-900 font-normal rounded-lg flex items-center p-2 hover:bg-gray-100 group">
                    <svg class="w-5 h-5 text-gray-500 group-hover:text-gray-900 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
                        <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path>
                    </svg>
                    <span class="ml-2">Helper Management</span>
                </a>
            </li>
            <li>
                <a href="/ManagerPage/ServiceManagement" class="text-sm text-gray-900 font-normal rounded-lg flex items-center p-2 hover:bg-gray-100 group">
                    <svg class="w-5 h-5 text-gray-500 group-hover:text-gray-900 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-2">Service Management</span>
                </a>
            </li>
            <li>
                <a href="/ManagerPage/BookingManagement" class="text-sm text-gray-900 font-normal rounded-lg flex items-center p-2 hover:bg-gray-100 group">
                    <svg class="w-5 h-5 text-gray-500 group-hover:text-gray-900 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-2">Booking Management</span>
                </a>
            </li>
        </ul>
        <div class="mt-4 px-4">
            @if (HttpContext.Session.GetString("JWTToken") != null)
            {
                <span>Hello, @HttpContext.Session.GetString("UserName")!</span>
                <form method="post" asp-page="/LogIn&Out/Logout">
                    <button type="submit" class="mt-2">Log out</button>
                </form>
            }
            else
            {
                <a href="/Signup">Sign Up</a>
            }
        </div>
    </div>
</aside>


<!-- Main Content -->
<div id="main-content">
    <main>
        <h3 class="header-title">Service Management</h3>
        <!-- Button to open modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addServiceModal">
            Add New Service
        </button>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Duration</th>
                    <th>Helper Name</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Services != null && Model.Services.Count > 0)
                {
                    foreach (var service in Model.Services)
                    {
                        <tr>
                            <td>@service.Name</td>
                            <td>@service.Description</td>
                            <td>@service.Price</td>
                            <td>@service.Duration</td>
                            <td>@service.HelperName</td>
                            <td>
                                <img src="@service.Image" alt="@service.Name" style="width: 100px; height: auto;" />
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="6">No Services found.</td></tr>
                }
            </tbody>
        </table>
    </main>
</div>

<!-- Modal for adding new service -->
<div id="addServiceModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Service</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="AddService">
                    <div class="form-group">
                        <label for="serviceName">Name</label>
                        <input type="text" class="form-control" name="Name" required />
                    </div>
                    <div class="form-group">
                        <label for="serviceDescription">Description</label>
                        <textarea class="form-control" name="Description" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="servicePrice">Price</label>
                        <input type="number" class="form-control" name="Price" required />
                    </div>
                    <div class="form-group">
                        <label for="serviceDuration">Duration</label>
                        <input type="number" class="form-control" name="Duration" required />
                    </div>
                    <div class="form-group">
                        <label for="helperId">Helper ID</label>
                        <input type="number" class="form-control" name="HelperId" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Service</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Include your scripts and styles here -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
    /* Existing styles */
    #main-content {
        margin-left: 250px;
        padding: 20px;
        background-color: #f1f3f5;
        min-height: 100vh;
    }

    .header-title {
        text-align: center; /* Căn giữa */
        font-size: 2rem; /* Kích thước lớn hơn */
        font-weight: bold; /* In đậm */
        margin-bottom: 20px; /* Khoảng cách dưới tiêu đề */
    }
</style>
